<h1 class="display-6">Profile<% resource_name.to_s.humanize %></h1>
<br />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.email_field :email, class:"form-control", placeholder:"Email", autocomplete: "email" %>
  </div>
  <br />
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.password_field :password, class:"form-control", placeholder:"New password (" + @minimum_password_length.to_s + " characters minimum)", autocomplete: "new-password" %>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Password confirmation", autocomplete: "new-password" %>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :current_password, class:"form-control", placeholder:"Current password", autocomplete: "current-password" %>
  </div>
  <br />
  <p class="lead">
    <%= f.submit "Save", class:"btn btn-outline-dark" %>
    <%= link_to "Cancel my account", registration_path(resource_name), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-danger" %>
    <%= link_to "Back", :back, class:"btn btn-dark"%>
  </p>
<% end %>


