<h1 class="display-6">Register</h1>
<br />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password, class:"form-control", placeholder:"Password (" + @minimum_password_length.to_s + " characters minimum)", autocomplete: "new-password" %>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Password confirmation", autocomplete: "new-password" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Register", class:"btn btn-dark" %>
  </div>
<% end %>
<br />
<p class="lead">
  <%= render "devise/shared/links" %>
<p>
